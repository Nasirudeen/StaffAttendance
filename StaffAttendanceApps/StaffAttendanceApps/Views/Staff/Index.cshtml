

@model IEnumerable<StaffAttendanceApps.Models.Staff>

@{
    ViewData["Title"] = "User Page";
    Layout = "~/Views/Shared/LayoutNew.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<br />
<div class="col-2">
    <h1 class="text-info" style="font-size:35px">Staff Register List</h1>
</div>


<hr />

<br />
<br />


<br />
<br />

<div class="form-border" style="margin-top:40px;">
   
        <table class="table table-striped table-hover" id="jayb1">
            <thead style="background-color: azure; font-size: 35px;">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.StaffId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StaffNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Department)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StaffLevel)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TimeIn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TimeOut)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Created)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Updated)
                    </th>


                </tr>
            </thead>
            <tbody style="font-size: 35px;">
                @foreach (var item in Model)
                {
                    var Id = item.StaffId;
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StaffId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StaffNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StaffLevel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeIn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeOut)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Updated)
                    </td>

                    <td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">


                            <a asp-controller="Staff" asp-route-id="@item.StaffId" asp-action="Edit" class="btn btn-primary mx-2"><i class="fas fa-edit"></i>&nbspEdit</a>
                            <a asp-controller="Staff" asp-route-id="@item.StaffId" asp-action="Delete" class="btn btn-danger mx-2"><i class="far fa-trash-alt"></i>&nbspDelete</a>
                            @*<a asp-controller="User" asp-route-id="@item.UserId" asp-action="Details" class="btn btn-info mx-2"><i class="fa fa-ban fa-fw"></i>&nbspDetails</a>*@
                        </div>
                    </td>

                </tr>
                }
            </tbody>
        </table>
  
</div>

<script>
    $(document).ready(function () {
        $("#jayb1").DataTable();

        $("#dialog-form").dialog({
            modal: true
        });
    });



</script>

@section Scripts{
    <script>


        $(document).ready(function () {
            $("#jayb1").DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'excel', 'pdf', 'print'
                ]
            });

            $("#dialog-form").dialog({
                modal: true
            });

        });
    </script>
}