@model HostelApplication.Models.Role;


@{
    ViewData["Title"] = "Role  Page";
    Layout = "~/Views/Shared/LayoutNew.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<div class="col-6">
    <h2 class="text-info">Edit Role</h2>
</div>
<hr />
<div class="row ml-4 mt-3">
    <div class="col-md-4">
        @using (@Html.BeginForm("Edit", "Role", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.RoleId)
            <div class="form-group row">
                <label style="font-size:35px" asp-for="RoleName" id="RoleName-Label" class="control-label col-sm-3"></label><br />
                <div class="col-sm-9">
                    <input class="form-control inputstl" style="width: 450px; font-size: 35px; height:65px;" asp-for="RoleName" name="RoleName" id="RoleName" type="text" required placeholder="enter your RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <label style="font-size:35px" asp-for="Created" id="Created-Label" class="control-label col-sm-3"></label><br />
                <div class="col-sm-9">
                    <input class="form-control inputstl" style="width: 450px; font-size: 35px; height:65px;" asp-for="Created" name="Created" id="Created" type="text" required placeholder="enter your Created" class="form-control" />
                    <span asp-validation-for="Created" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label style="font-size:35px" asp-for="Updated" id="Updated-Label" class="control-label col-sm-3"></label><br />
                <div class="col-sm-9">
                    <input class="form-control inputstl" style="width: 450px; font-size: 35px; height:65px;" asp-for="Updated" name="Updated" id="Updated" type="text" required placeholder="enter your Updated" class="form-control" />
                    <span asp-validation-for="Updated" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">

                <div class="col-3 offset-3">
                    <input type="submit" value="Edit" class="btn btn-lg btn-block btn-success w-100" />
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-lg btn-block btn-info w-100">Back to List</a>

                </div>
            </div>

        }
    </div>
</div>

<script type="text/javascript">
@if (TempData["status"] != null)
{
    <text>alert('Role updated Successfully'); </text>
}

</script>
