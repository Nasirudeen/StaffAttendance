

@model IEnumerable<HostelApplication.Models.Student>
@{
}
@{
    ViewData["Title"] = "Student Page";
    Layout = "~/Views/Shared/LayoutNew.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<br />
<div class="col-6">
    <h2 class="text-info" style="font-size:35px">Student List</h2>
</div>
<div class="text-center">
    <a href="~/User/Create/" class="btn btn-primary lg-c-blue" style="font-size:35px"><i class="fas fa-plus"></i>Create New Student</a>
</div>
<div class="form-border" style="margin-top:40px;">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover" id="jayb1">
            <thead style="background-color: azure; font-size: 35px;">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.StudentId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MatricNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OtherName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Faculty)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Department)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Course)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmailAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SessionofAdmission)
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.Created)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Updated)
                    </th>


                </tr>
            </thead>
            <tbody style="font-size: 35px;">
                @foreach (var item in Model)
                {
                    var Id = item.StudentId;
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentId)
                        </td>
                         <td>
                            @Html.DisplayFor(modelItem => item.MatricNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Faculty)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Department)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentLevel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmailAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SessionofAdmission)
                        </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.Created)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Updated)
                        </td>


                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Student" asp-route-id="@item.StudentId" asp-action="Edit" class="btn btn-primary mx-2"><i class="fas fa-edit"></i>&nbspEdit</a>
                                <a asp-controller="Student" asp-route-id="@item.StudentId" asp-action="Delete" class="btn btn-danger mx-2"><i class="far fa-trash-alt"></i>&nbspDelete</a>
                                @*<a asp-controller="College" asp-route-id="@item.CollegeId" asp-action="Details" class="btn btn-info mx-2"><i class="fa fa-ban fa-fw"></i>&nbspDetails</a>*@
                            </div>

                        </td>



                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <center> <p><b>No items is created</b></p></center>
    }
</div>
<script>
    $(document).ready(function () {
        $("#jayb1").DataTable({
            dom: 'Bfrtip',
            buttons: [
                'excel', 'pdf', 'print'
            ]
        });

        $("#dialog-form").dialog({
            modal: true
        });

    });

</script>