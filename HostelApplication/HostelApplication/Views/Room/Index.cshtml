

@model IEnumerable<HostelApplication.Models.Room>
@{
}
@{
    ViewData["Title"] = "Room Page";
    Layout = "~/Views/Shared/LayoutNew.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<br />
<div class="col-6">
    <h2 class="text-info" style="font-size:35px">Room List</h2>
</div>
<div class="text-center">
    <a href="~/Room/Create/" class="btn btn-primary lg-c-blue" style="font-size:35px"><i class="fas fa-plus"></i>Create New Room</a>
</div>
<div class="form-border" style="margin-top:40px;">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover" id="jayb1">
            <thead style="background-color: azure; font-size: 35px;">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RoomId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RoomNo)
                    </th>
                   
                    <th>
                        @Html.DisplayNameFor(model => model.TotalBedspace)
                    </th>
                  
                    <th>
                        @Html.DisplayNameFor(model => model.Created)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Updated)
                    </th>


                </tr>
            </thead>
            <tbody style="font-size: 35px;">
                @foreach (var item in Model)
                {
                    var Id = item.RoomId;
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RoomId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RoomNo)                        </td>
                      
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalBedspace)
                        </td>
                       
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.Created)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Updated)
                        </td>


                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Room" asp-route-id="@item.RoomId" asp-action="Edit" class="btn btn-primary mx-2"><i class="fas fa-edit"></i>&nbspEdit</a>
                                <a asp-controller="Room" asp-route-id="@item.RoomId" asp-action="Delete" class="btn btn-danger mx-2"><i class="far fa-trash-alt"></i>&nbspDelete</a>
                                @*<a asp-controller="College" asp-route-id="@item.CollegeId" asp-action="Details" class="btn btn-info mx-2"><i class="fa fa-ban fa-fw"></i>&nbspDetails</a>*@
                            </div>

                        </td>



                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <center> <p><b>No items is created</b></p></center>
    }
</div>
<script>
    $(document).ready(function () {
        $("#jayb1").DataTable({
            dom: 'Bfrtip',
            buttons: [
                'excel', 'pdf', 'print'
            ]
        });

        $("#dialog-form").dialog({
            modal: true
        });

    });

</script>